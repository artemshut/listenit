<%= link_to 'New Audio', new_audio_path %>
<section id="tables">
  <table  class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>Song name</th>
      <th>Tags</th>

    </tr>
    </thead>
    <tbody>
    <% Audio.all.each do |audio| %>
        <tr>
        <td> <%= link_to image_tag('Download_icon_images.jpg')%>
             <%= link_to image_tag('add_7580.png')%>
             <%= audio.display_name %>
          <div class="bubbleInfo">
            <div id="download" class="trigger">Info</div>
            <table style="opacity: 0; top: -50px; left: -33px; display: none;" id="dpop" class="popup">
              <td>Title: <%= audio.metadata['title'] %> </td>
              <td>Artist: <%= audio.metadata['artist'] %> </td>
              <td>Album: <%= audio.metadata['album'] %> </td>
              <td>Year: <%= audio.metadata['year'] %> </td>
              <td><%= audio.description %></td>
            </table>
          </div>
        </td>
        <td><%= raw audio.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></td>




          <!--<td><%= link_to 'Show', audio %></td>
                <td><%= link_to 'Edit', edit_audio_path(audio) %></td>
                <td><%= link_to 'Destroy', audio, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
    <% end %>

    </table>



</section>